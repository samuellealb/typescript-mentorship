{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "node::watch",
      "program": "${workspaceFolder}/app.js",
      "runtimeArgs": [
        "--watch"
      ],
      "cwd": "${workspaceFolder}",
      "internalConsoleOptions": "openOnSessionStart",
      "preLaunchTask": "tsc:watch",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}